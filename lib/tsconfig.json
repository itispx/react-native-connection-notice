{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "types": ["react-native"],
    "moduleResolution": "node",
    "removeComments": true,
    "noEmit": false,
    "allowJs": true,
    "strict": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}
